<!DOCTYPE html>
<html lang="tr">
<head>
  <meta charset="UTF-8">
  <title>Oteller</title>
   <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet">
</head>
<body>
  <div class="container my-4">
  <h1 class="text-center fw-bold text-primary">
    Otel Listesi
  </h1>
</div>

 <div class="container">
  <div class="row g-4">

    <% oteller.forEach(otel => { %>

      <div class="col-12 col-md-6 col-lg-4">
        <div class="card h-100 shadow-sm border-2 border-success">

          <img 
            src="/img/kilim-otel-291-1024x683_1.jpg"
            class="card-img-top"
            alt="<%= otel.isim %>"
            style="height: 200px; object-fit: cover;"
          >

          <div class="card-body d-flex flex-column">
            <%= otel.id %>
            <div class="d-flex justify-content-between align-items-start mb-2">
              <h5 class="card-title fw-semibold mb-0">
                <%= otel.isim %>
              </h5>
              <span class="badge bg-success fs-6">
                <%= otel.fiyat %> ₺
              </span>
            </div>

            <p class="text-muted small mb-2">
              <i class="bi bi-geo-alt-fill"></i>
              <%= otel.sehir %>
            </p>

            <div class="d-flex gap-2 mb-3">
              <span class="badge bg-primary">
                ⭐ <%= otel.puan %>
              </span>
              <span class="badge bg-warning text-danger">
                <%= otel.bos_oda %> Boş Oda
              </span>
            </div>

            <div class="mt-auto d-flex justify-content-between align-items-center">
              <small class="text-muted">
                245 değerlendirme
              </small>
              <form action = "/otel_sil" method="POST">
                <div style="position: relative;left:60%">
                <b>Otel id :</b> <input value = "<%= otel.id %>" name="id" class="form-control text-center"  style="width: 30%;" readonly>
                <button class="btn btn-sm btn-danger" type = "submit" style="position: relative;left:7%">SİL</button>
              
                 </div>
              </form>
            </div>

          </div>
        </div>
      </div>

    <% }) %>

  </div>
</div>
  
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>